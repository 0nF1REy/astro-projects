          {tourDates.map((item) => (
            <li class="tour__row">
              <div class="tour__col tour__col--date">{item.date}</div>
              <div class="tour__col tour__col--city">{item.city}</div>
              <div class="tour__col tour__col--venue">{item.venue}</div>
              <a
                href={item.ticketUrl}
                class="tour__tickets-btn"
                rel="noopener noreferrer"
              >
                TICKETS
              </a>
            </li>
          ))}
        </ul>
      ) : (
        <p class="tour__subtitle">{tourSubtitle}</p>
      )
    }
  </div>
</section>
