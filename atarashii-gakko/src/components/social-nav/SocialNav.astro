---
import Icon from "../icon/Icon.astro";

const socialLinks = [
  { href: "#", icon: ["fas", "tshirt"], label: "Merchandise" },
  { href: "#", icon: ["fab", "twitter"], label: "Twitter" },
  { href: "#", icon: ["fab", "instagram"], label: "Instagram" },
  { href: "#", icon: ["fab", "facebook-f"], label: "Facebook" },
  { href: "#", icon: ["fab", "tiktok"], label: "TikTok" },
  { href: "#", icon: ["fab", "youtube"], label: "YouTube" },
  { href: "#", icon: ["fab", "spotify"], label: "Spotify" },
  { href: "#", icon: ["fab", "apple"], label: "Apple Music" },
] as const;
---

<nav class="social-nav">
  <ul>
    {
      socialLinks.map((link) => (
        <li>
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.label}
          >
            <Icon icon={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  .social-nav {
    // ESTILOS DE POSICIONAMENTO:
    position: absolute;
    top: 1.5rem;   // 1.5rem da borda superior
    right: 1.5rem; // 1.5rem da borda direita
  }
  .social-nav {
    @media (max-width: 768px) {
      display: none;
    }
  }

  .social-nav ul {
    list-style: none;
    display: flex;
    gap: 0.8rem;
  }

  .social-nav a {
    color: var(--primary-yellow);
    font-size: 1.25rem;
    text-decoration: none;
    transition: opacity 0.2s ease-in-out;

    &:hover {
      color: var(--hover-purple);
    }
  }
</style>
