<section class="discography">
  <div class="discography__container">
    <!-- Music Section -->
    <div class="discography__music">
      <h2 class="discography__title discography__title--music">Music</h2>

      <div class="discography__grid">
        {
          discographyItems.map((item) => (
            <div class="discography__item">
              <a href={item.href} class="discography__image-container">
                <img
                  src={item.image}
                  alt={item.title}
                  class="discography__image"
                  loading="lazy"
                  sizes="(max-width: 600px) 100vw, 600px"
                  width="316"
                  height="316"
                />
              </a>
              <a href={item.href} class="discography__item-title-link">
                <h3 class="discography__item-title">
                  {item.id === "06" ? (
                    <>
                      <span class="desktop-title">
                        {item.title.replace("<br>", " ")}
                      </span>
                      <span
                        class="mobile-title"
                        set:html={item.titleMobile || item.title}
                      />
                    </>
                  ) : (
                    <span set:html={item.title} />
                  )}
                </h3>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
