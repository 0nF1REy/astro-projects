---
import Icon from "../icon/Icon.astro";

const socialLinks = [
  { href: "#", icon: ["fab", "twitter"], label: "Twitter" },
  { href: "#", icon: ["fab", "instagram"], label: "Instagram" },
  { href: "#", icon: ["fab", "facebook-f"], label: "Facebook" },
  { href: "#", icon: ["fab", "tiktok"], label: "TikTok" },
  { href: "#", icon: ["fab", "youtube"], label: "YouTube" },
  { href: "#", icon: ["fab", "spotify"], label: "Spotify" },
  { href: "#", icon: ["fab", "apple"], label: "Apple Music" },
] as const;
---

<header class="hero-header">
  <nav class="social-nav">
    <ul>
      {
        socialLinks.map((link) => (
          <li>
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.label}
            >
              <Icon icon={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style lang="scss">
  @use "../../styles/variables.scss";

  .hero-header {
    height: 60vh;
    width: 100%;
    background-image: url("/images/hero-image.jpg");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
    padding: 1.5rem;
  }

  .social-nav ul {
    list-style: none;
    display: flex;
    gap: 1.25rem;
  }

  .social-nav a {
    color: var(--primary-yellow);
    font-size: 1.25rem;
    text-decoration: none;
    transition: opacity 0.2s ease-in-out;

    &:hover {
      opacity: 0.8;
    }
  }
</style>
