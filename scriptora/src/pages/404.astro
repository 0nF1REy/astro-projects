---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Página Não Encontrada">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="404" height={250} width={250} class="mt-10" />
    <h1 class="text-5xl">Página não encontrada</h1>
    <p class="text-2xl mb-10">
      Desculpe, não conseguimos encontrar a página que você estava procurando.
    </p>
    <a
      href="/"
      class="inline-block bg-gray-100 p-2 mb-6 hover:bg-[#39b4ff] hover:text-white"
      >Voltar para a página inicial</a
    >
  </div>
</MainLayout>
