---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import MainLayout from "../../../layouts/MainLayout.astro";
import ArticleCard from "../../../components/ArticleCard.astro";
import { capitalize } from "../../../utils";

// 1. Esta função é executada no momento da compilação para gerar as rotas
export async function getStaticPaths() {
  const allBlogArticles = await getCollection("blog");

  // Coleta todas as tags de todos os artigos
  const allTags = allBlogArticles.map((article) => article.data.tags).flat();

  // Remove as duplicadas para ter uma lista de tags únicas
  const uniqueTags = [...new Set(allTags)];

  // Gera um objeto de rota para cada tag única
  return uniqueTags.map((tag) => {
    // Filtra os artigos que contêm esta tag específica
    const filteredArticles = allBlogArticles.filter((article) =>
      article.data.tags.includes(tag)
    );

    return {
      params: { tag }, // Define o parâmetro da URL (ex: /articles/tag/javascript)
      props: { articles: filteredArticles }, // Passa os artigos filtrados como props para a página
    };
  });
}

// 2. O restante do código é executado para cada página gerada
const { tag } = Astro.params;
const { articles } = Astro.props;
---

<MainLayout title={`Artigos com a tag #${capitalize(tag)}`}>
  <a
    href="/articles"
    class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white"
  >
    &larr; Voltar para Artigos
  </a>
  <h1 class="text-2xl pb-3">Artigos com a tag: #{capitalize(tag)}</h1>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {articles.map((article) => <ArticleCard {article} />)}
  </div>
</MainLayout>
